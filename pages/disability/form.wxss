/* pages/disability/form.wxss */
Page{
  background-color: #f3f3f3;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
  font-size: 34rpx;
}
.main-box{
  padding-bottom: calc(120rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

.form-item{
  border-radius: 24rpx;
  background-color: #fff;
  width: 92%;
  margin:30rpx auto;
  overflow: hidden;
}
.item-title{
  
  text-align: center;
  overflow: hidden;
  line-height: 100rpx;
  height: 100rpx;
}

.form-item:nth-child(odd) .item-title{
  background-color: #3AC7F4;
}

.form-item:nth-child(even) .item-title{
  background-color:#96ddf3;
}
.item-content .form-check__label:last-child{
  padding-bottom: 30rpx;
}
.form-check__label{
  display: flex;
  align-items: top;
  padding: 30rpx 30rpx 0;
}
.form-cell__hd{
  margin-right: 30rpx;
  position: relative;
}
.form-cell__bd{
  flex: 1;
}
.btn-box{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}
.btn{
  width: 76%;
  margin: 30rpx auto;
  background:#3AC7F4;
  height: 90rpx;
  text-align: center;
  color: #fff;
  line-height: 90rpx;
  border-radius: 45rpx;
}
.form-radio{  
  width: 40rpx;
  height: 40rpx;
  border:4rpx solid #aaa;
  border-radius: 50%;
}
.form-radio-checked{
  display: inline-block;
  border-color:#3AC7F4;
}
.form-radio-checked::after{  
  color: #3AC7F4;
  font: normal normal normal 14px/1 "weui";
  content: "\EA08";
  font-weight: bold;  
  text-align: center;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;  
  transform:translate(-50%, -50%) scale(1);
  -webkit-transform:translate(-50%, -50%) scale(1);
  position: absolute;
  top: calc(50% - 4rpx);
  left: 50%;  
}

.form-checkbox{  
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #aaa;
  border-radius: 5rpx;
}
.form-checkbox-checked{
  position: relative;
  border-color:#3AC7F4;
}
.form-checkbox-checked::after{
  position: absolute; 
  color: #3AC7F4;
  font: normal normal normal 14px/1 "weui";
  content: "\EA08";
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  font-weight: bold;   
  transform:translate(-50%, -50%) scale(1);
  -webkit-transform:translate(-50%, -50%) scale(1);
  text-align: center;
  display: block;
  position: absolute;
  top: 50%;
  left: 50%;
}

radio{
  width: 40rpx;
  height: 40rpx;
  border:4rpx solid #aaa;
  border-radius: 50%;  
}

radio-group .wx-radio-input{
  position: absolute;
  top: 0;
  left:0;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #aaa !important;/* 设置边框（外圆） */
}

radio-group .wx-radio-input.wx-radio-input-checked{  
  width: 40rpx !important;
  height: 40rpx !important;
  border-color:#3AC7F4 !important;
  background:#3AC7F4 !important;
}

radio-group .wx-radio-input.wx-radio-input-checked::before{
  border-radius: 50%;
  text-align: center;
  color: #3AC7F4;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: #fff !important;
  font-size: 24rpx;
  font-weight: bolder;
  transform:translate(-50%, -50%) scale(1);
  -webkit-transform:translate(-50%, -50%) scale(1);
}
checkbox .wx-checkbox-input {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #aaa !important;/* 设置边框（外圆） */
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  border: 4rpx solid #3AC7F4 !important;
  background:#fff !important;
}

checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  border-radius: 50%;
  text-align: center;
  color: #3AC7F4;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: #fff !important;
  font-size: 24rpx;
  font-weight: bolder;
  transform:translate(-50%, -50%) scale(1);
  -webkit-transform:translate(-50%, -50%) scale(1);
}



