/**index.wxss**/
page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.head{
  width: 100%;
  background-color: #f99303;
  color: #fff;
  padding: 40rpx 32rpx;
  box-sizing: border-box;
}
.head-personal{
  display: flex;
  align-items: center;
  text-align: justify;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: inline-block;
  overflow: hidden;
}
.personal-des{
  flex: 1;
  margin-left: 8rpx;
}
.personal-title{
  color: #f04124;
  font-size: 30rpx;
  height: 54rpx;
  line-height: 54rpx;
  background-color: #fff;
  padding: 0 28rpx;
  border-radius: 28rpx;  
  margin-right: 20rpx;
}
.nickName{
  font-size: 32rpx;
}
.stars{
  margin-top: 10rpx;
}
.star{
  width: 36rpx;
  height: 36rpx;
  display: inline-block;
}
.head-skills{
  margin-top: 20rpx;
  text-align: center;
}
.skill{  
  float: left;
  width: 20%;
  box-sizing: border-box;  
  margin: 8rpx 2.25%;  
  font-size: 24rpx;
  height: 45rpx;
  line-height: 45rpx;
  background-color: #fff;
  color:#f04124;
  border-color: #f04124;
  border-radius: 20rpx;  
}


.records{
  display: flex;
  width: 100%;
  color: #fff;
  text-align: center;
  box-sizing: border-box;
}
.record{
  background-color: #f99303;
  opacity: 0.85;
  flex: 1;
  padding: 10rpx;
}
.record-mid{
  position: relative;
}
.record-mid::before{
  position: absolute;
  left: 0;
  top:60rpx;
  bottom: 60rpx;
  content: ' ';
  width: 2rpx;
  border-left: 2rpx solid #fff;
}
.record-mid::after{
  position: absolute;
  right: 0;
  top:60rpx;
  bottom: 60rpx;
  content: ' ';
  width: 2rpx;
  border-left: 2rpx solid #fff;
}
.record-num{
  opacity: 1;
  font-size: 24rpx;
  margin: 10rpx auto;
}
.record-title{
  opacity: 1;
  font-size: 28rpx;
  margin: 10rpx auto;
}
.grids{
  position: relative;
  overflow: hidden;
}
.grid{
  margin-top: 5rpx;
  min-width: 25%;
  box-sizing: border-box;
  float: left;
  padding: 20rpx;
  text-align: center;
}
.grid-image{
  width: 100rpx;
  height: 100rpx;
  margin: 0 auto;
}
.grid-text{
  margin-top:5rpx;
  color: #000;  
  font-size: 30rpx;
  font-weight: 400;
}

.trains{
  position: relative;
  overflow: hidden;
  text-align: center;
  display: flex;
  width: 100%;  
}
.train{
  flex:1;
  margin: 40rpx 8%;
  border:2rpx solid #f99303;
  border-radius: 40rpx;
  box-sizing: border-box;
  position: relative;
  height: 400rpx;
}
.train-title{
  font-size: 34rpx;
  font-weight: bold;
  margin-top:20rpx;
}
.train-time{  
  font-size: 40rpx;
  color:#f99303;
  margin-top:120rpx;
}
.train-des{
  font-size: 24rpx;
  opacity: 0.85;
  text-align: center;
  position: absolute;
  padding: 0 10rpx;
  left: 0;
  right: 0;
  bottom: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}