.tag {
  font-size: 28rpx;
  color: #aaa;
  padding: 40rpx 0 20rpx;
  padding-left: 30rpx;
  text-align: left;
  width: 100%;
  box-sizing: border-box;
}
.cares{
  margin: 0 30rpx;
  background-color: #fff;
  border-radius: 30rpx;
  padding: 30rpx;
}
.care{
  position: relative;
  margin-left: 60rpx;
  margin-top: 30rpx;
}
.cares:first-child{
  margin-top: 0;
}

.care::before{
  content: " ";
  position: absolute;
  left: -60rpx;
  top: 10rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: #41b592;
  border-radius: 50%;
}